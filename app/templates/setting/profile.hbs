<!--社团基础信息页面-->
<div class="progress-wrap">
	<div class="progress">
		<div class="progress-bar progress-bar-striped active"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
			<span class="sr-only">0% Complete</span>
		</div>
	</div>
</div>
<header class="content-header clearfix">
	<div class="content-title">
		<div class="helper-font-24 theme-color">
			<i class="fa fa-pencil"></i>
			<span>企业信息编辑</span>
		</div>
	</div>
</header>
<div class="content-body">
	<form class="">
		<div class="input-group">
			<span class="input-group-addon theme-color">企业名称</span>
			<span type="text" class="form-control" name="name" id="A_NAME">{{name}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">企业地址</span>
			{{input value=address class='form-control'}}
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">联系邮箱</span>
			<input type="text" class="form-control" name="email" id="A_Email" />
		</div>
		{{file-upload fieldName='企业Logo'}}
		<div class="input-group">
			<span class="input-group-addon theme-color">企业简介</span>
			{{textarea value=description cols="10" rows="6" class='form-control'}}
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助活动偏好</span>
			<div class="form-control">
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="学术" checked />
					<span>学术</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="艺术" checked />
					<span>艺术</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="体育" checked />
					<span>体育</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="实践" checked />
					<span>实践</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="公益" checked />
					<span>公益</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="其他" checked />
					<span>其他</span>
				</label>
			</div>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助学校偏好</span>
			<div class="form-control">
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="学术" checked />
					<span>学术</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="艺术" checked />
					<span>艺术</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="体育" checked />
					<span>体育</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="实践" checked />
					<span>实践</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="公益" checked />
					<span>公益</span>
				</label>
				<label class="xx-input-inline">
					<input type="radio" class="xx-input" name="type" value="其他" checked />
					<span>其他</span>
				</label>
			</div>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助金额</span>
			{{input value=targetMoney class='form-control'}}
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">期望赞助人数</span>
			{{input value=peopleNumber class='form-control'}}
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">受众对象</span>
			<span type="text" class="form-control" name="name" id="A_NAME">{{name}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助时间段</span>
			<span type="text" class="form-control" name="name" id="A_NAME">{{name}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助形式</span>
			<div class="form-control">
				<label class="xx-input-inline">
					{{input type="checkbox" name="现金" checked=isMoney class='xx-input'}}
					<span>现金</span>
				</label>
				<label class="xx-input-inline">
					{{input type="checkbox" name="现金" checked=isGood class='xx-input'}}
					<span>物资</span>
				</label>
				<label class="xx-input-inline">
					{{input type="checkbox" name="技术" checked=isTech class='xx-input'}}
					<span>技术</span>
				</label>
			</div>
		</div>
		<div class="form-group form-submit-group">
			<button class="btn btn-xx-theme" {{action 'saveInfo'}}>保存</button>
		</div>
	</form>
</div>