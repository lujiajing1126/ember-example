<!--申请赞助详情页面模板-->
<header class="content-header clearfix">
	<div class="content-title">
		<div class="helper-font-16 theme-color">
			<i class="fa fa-pencil"></i>
			<span>申请赞助</span>
		</div>
	</div>
</header>
<div class="content-body">
	<form id="sponsorApplyInfoForm" class="">
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助主题</span>
			<span class="form-control" name="title">{{title}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">发布赞助的组织</span>
			{{#link-to 'org.show' organization.id class="form-control"}}{{organization.name}}{{/link-to}}
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助需求</span>
			<span class="form-control" name="demanding" id="S_Need">{{demanding}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助金额</span>
			<div class="form-control">
				<div class="form-inline">
					<div class="form-group" >
						<div class="input-group width" >
							<span class="input-group-addon theme-color">￥</span>
							<span class="form-control" id="zanzhu_money" name="money">{{money}}</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">赞助提供</span>
			<span class="form-control" name="providing" id="S_Provide">{{providing}}</span>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">申请资料</span>
			<div class="form-control">
				<div class="prompt">上传申请资料有助于提高赞助成功率</div>
				<div class="upload-file-box ">
					<div class="pull-left upload-file-wrapper">
						<div class="xx-panel-container" id="attach_wrapper">
							{{#each requestAttachment}}
							<div class="xx-panel-wrapper">
								<div class="xx-panel-content">
									<header class="xx-panel-header clearfix">
										<div class="xx-panel-title">
											{{filename}}
										</div>
									</header>
								</div>
							</div>
							{{/each}}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="input-group">
			<span class="input-group-addon theme-color">关联活动</span>
			<div class="form-control">
				<div class="prompt">添加你需要申请赞助的相关活动</div>
				<div class="upload-file-box ">
					<div class="upload-file-wrapper pull-left ">
						<div class="xx-panel-container" id="ACTIVITIES">
							{{#each events}}
							<div class="xx-panel-wrapper">
								<div class="xx-panel-content">
									<header class="xx-panel-header clearfix">
										<div class="xx-panel-title">
											{{#link-to 'act.show' id}}{{name}}{{/link-to}}
										</div>
									</header>
								</div>
							</div>
							{{/each}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>